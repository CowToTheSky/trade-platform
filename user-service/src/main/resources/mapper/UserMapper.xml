<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="py.platform.user.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="py.platform.user.model.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="status" property="status"/>
        <result column="role" property="role"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="last_login_ip" property="lastLoginIp"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <result column="login_fail_count" property="loginFailCount"/>
        <result column="locked_until" property="lockedUntil"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <select id="findByUsername" resultMap="BaseResultMap">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <insert id="insert" parameterType="py.platform.user.model.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
            username, password, email, phone, status, role, avatar_url,
            last_login_ip, last_login_time, login_fail_count, locked_until,
            created_at, updated_at
        ) VALUES (
                     #{username}, #{password}, #{email}, #{phone}, #{status}, #{role}, #{avatarUrl},
                     #{lastLoginIp}, #{lastLoginTime}, #{loginFailCount}, #{lockedUntil},
                     NOW(), NOW()
                 )
    </insert>

    <update id="updateLoginInfo" parameterType="py.platform.user.model.User">
        UPDATE user
        SET last_login_ip = #{lastLoginIp},
            last_login_time = #{lastLoginTime},
            login_fail_count = #{loginFailCount},
            locked_until = #{lockedUntil},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

</mapper>